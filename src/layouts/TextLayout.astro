---
import Layout from "./Layout.astro";
import Center from "../components/Center.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<style>
  .centered {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 900px;
    margin: auto;
  }
</style>
<Layout title={title}>
  <Center>
    <slot />
  </Center>
</Layout>
