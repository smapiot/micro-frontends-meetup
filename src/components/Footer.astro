---
import { imprintUrl, legalUrl, year } from "../data/meta";

export interface Props {}
---

<style>
  .footer {
    margin: 0 auto;
    width: 100%;
    font-size: 12px;
    line-height: 1.5;
    display: flex;
    justify-content: center;
    color: var(--secondary-color);
    z-index: 2;
  }

  .footer-link {
    color: var(--secondary-color);
    font-size: 12px;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: #fff;
  }

  .footer-logo :global(svg) {
    height: var(--space-4x);
    transform: translateY(5px);
    margin-left: 2px;
  }

  .footer-legal {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    padding: var(--space-4x);
  }

  .footer-copyright {
    text-align: center;
    margin-bottom: 15px;
  }

  .footer-separator {
    margin-bottom: 15px;
  }

  .footer-center-group {
    display: flex;
    align-items: center;
    flex-direction: column;
  }

  @media screen and (min-width: 960px) {
    .footer-hostedby {
      display: none;
    }

    .footer-legal {
      flex-direction: row;
    }

    .footer-copyright {
      margin-bottom: 0;
    }

    .footer-center-group {
      flex-direction: row;
    }

    .footer-separator {
      margin: 0 10px;
      height: var(--space-4x);
      width: 1px;
      background: var(--secondary-color);
      display: block;
    }
  }

  .footer-paragraph {
    margin: 0;
  }

  .secondary-text {
    color: var(--secondary-color);
    display: none;
  }

  @media screen and (min-width: 390px) {
    .secondary-text {
      display: initial;
    }
  }
</style>
<footer class="footer">
  <div class="footer-legal">
    <div class="footer-hostedby">
      <div class="footer-separator"></div>
    </div>
    <div class="footer-copyright">
      Copyright Â© {year} smapiot. All rights reserved.
    </div>
    <div class="footer-center-group">
      <p class="footer-paragraph">
        <a href={legalUrl} class="footer-link" rel="noopener noreferrer">
          Legal
        </a>
      </p>
      <div class="footer-separator"></div>
      <p class="footer-paragraph">
        <a href={imprintUrl} class="footer-link" rel="noopener noreferrer">
          Imprint
        </a>
      </p>
    </div>
  </div>
</footer>
